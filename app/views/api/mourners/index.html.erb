<p id="notice"><%= notice %></p>

<h1>Mourners</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Employer</th>
      <th>Job title</th>
      <th>Union</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mourners.each do |mourner| %>
      <tr>
        <td><%= mourner.first_name %></td>
        <td><%= mourner.last_name %></td>
        <td><%= mourner.employer %></td>
        <td><%= mourner.job_title %></td>
        <td><%= mourner.union %></td>
        <td><%= link_to 'Show', mourner %></td>
        <td><%= link_to 'Edit', edit_mourner_path(mourner) %></td>
        <td><%= link_to 'Destroy', mourner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

